<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>雲雀文庫：検索</title>
    <link rel="icon" href="images/book_red.png">
    <link rel="stylesheet" href="stylesheets/color.css">
</head>

<body>
    <%- include('commonMenu.ejs') %>
        <!--色で検索-->
        <section>
            <div>
                <!--色の選択用フォーム-->
                <form action="/color" method="POST" id="colorSearchForm">
                    <input type="text" id="colorPicker">
                    <% if(flag===0){ %>
                        <input type="hidden" id="color" name="color">
                        <%}else{ %>
                            <input type="hidden" id="color" name="color" value="<%= color %> " class="search">
                            <%} %>

                                <p id="search" class="button">探索</p>
                </form>
                <hr id="line1">
                <!--結果表示-->
                <% if(flag===1){ %>
                    <% if(posts.length>0){%>
                        <div id="scroll">
                            <% posts.forEach(post=> { %>
                                <div class="postWrapping">
                                    <div class="post" style="background-color:<%=post.color %>;">
                                        <div class="cover">
                                            <div>
                                                <p class="bookInfo">
                                                    <span hidden class="bookId">
                                                        <%= post.book_id %>
                                                    </span>
                                                    <br>---------------------------<br>
                                                    <!--<img src="/images/line.png" alt="---------------">-->
                                                    <img src="images/user.png" alt="人" class="user">
                                                    <%= post.user_id %><br>
                                                        <b>
                                                            <%= post.comment %>
                                                        </b>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% }else{ %>
                            <div id="message">
                                該当する投稿はありません。
                            </div>

                            <% } %>
                                <% } %>
                                    <hr id="line2">
            </div>
        </section>
        <!--jQuery-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <!--spectrum-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.0/spectrum.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.0/i18n/jquery.spectrum-ja.min.js"></script>
        <link rel="stylesheet" type="text/css"
            href="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.0/spectrum.min.css">
        <!--作成-->
        <script src="javascripts/color.js"></script>
</body>

</html>